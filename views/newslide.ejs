    .whiskey-cards {
        display: flex;
        height: 350px;
        justify-content: space-between;
        flex-wrap: nowrap;
        overflow-x: scroll;
        -webkit-overflow-scrolling: touch;
        -ms-overflow-style: none;
        scrollbar-width: none;
        padding: 22px 48px 0 58px;

