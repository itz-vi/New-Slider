    .containerp {
        padding: 10px 60px 10px 0px;
        display: flex;
        height: 420px;
        width: 100%;
        justify-content: space-around;
        align-items: center;
        margin: 110px 0px;
        background: rgba(255, 255, 255, 0.096);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.76);
        backdrop-filter: blur(0.5px);
        -webkit-backdrop-filter: blur(0.5px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.185);

    }

    .containerp:hover {
        border-radius: 12px;
        border: 1px double rgb(154, 253, 253);
        box-shadow: 0 4px 28px rgba(4, 238, 255, 0.589), 0 6px 20px 0 rgba(255, 3, 129, 0.19);

